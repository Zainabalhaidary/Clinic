                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <!--<VariableSizedWrapGrid Orientation="Vertical" />-->
                        <StackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>

                <!--<TextBlock Margin="0,22,0,22" HorizontalAlignment="Center" FontSize="16" Text="Test" FontWeight="Light"/>-->

