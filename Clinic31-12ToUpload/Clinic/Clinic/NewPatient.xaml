                    <charting:LineSeries
                            Title="Level"
                            IndependentValueBinding="{Binding Name}"
                            DependentValueBinding="{Binding Value}"
                            IsSelectionEnabled="True" >
                        
                        
                            <charting:LineSeries.DataPointStyle>
                                <Style
                TargetType="charting:LineDataPoint">
                                    <Setter
                    Property="Background"
                    Value="#4A2F96"
                                 />
                          
                                 
                                </Style>
                            </charting:LineSeries.DataPointStyle>
                        
                        
                        
                        </charting:LineSeries>

                    </charting:Chart>

                <charting:Chart
                 Visibility="{Binding ShowChart,Converter={StaticResource BoolToVisibilityConverter}}"
                        x:Name="LineChart2"
                        Title="Pulse Chart"
                        Foreground="Black"
                        FontSize="8"
                         Grid.Row="1"
                        Width="400" 
                        Height="560"
                    Background="#BFB5DF">
                        <charting:LineSeries
                            Title="Level"
                            IndependentValueBinding="{Binding Name}"
                            DependentValueBinding="{Binding Value}"
                            IsSelectionEnabled="True" >


                            <charting:LineSeries.DataPointStyle>
                                <Style
                TargetType="charting:LineDataPoint">
                                    <Setter
                    Property="Background"
                    Value="#4A2F96"
                                 />


                                </Style>
                            </charting:LineSeries.DataPointStyle>



                        </charting:LineSeries>
                    </charting:Chart>

                <charting:Chart
                Visibility="{Binding ShowChart,Converter={StaticResource BoolToVisibilityConverter}}"
                 x:Name="LineChart3"
                  Title="Temperature Chart"
                        Foreground="Black"
                         FontSize="8"
                         Grid.Row="1"
                        Width="400" 
                        Height="560"
                    Background="#BFB5DF">
                        <charting:LineSeries
                            Title="Level"
                            IndependentValueBinding="{Binding Name}"
                            DependentValueBinding="{Binding Value}"
                            IsSelectionEnabled="True" >


                            <charting:LineSeries.DataPointStyle>
                                <Style
                TargetType="charting:LineDataPoint">
                                    <Setter
                    Property="Background"
                    Value="#4A2F96"
                                 />


                                </Style>
                            </charting:LineSeries.DataPointStyle>



                        </charting:LineSeries>
                    </charting:Chart>
                
                <GridView
                   Visibility="{Binding ShowChart,Converter={StaticResource BoolToVisibilityConverter}}"
                    Foreground="Black"
                  
                    x:Name="docGridView"
                    ScrollViewer.VerticalScrollBarVisibility="Visible"
                    ScrollViewer.VerticalScrollMode="Enabled"
                    IsItemClickEnabled="True"
                    SelectionMode="Single"
                    ItemClick="docGridView_ItemClick"
                    Background="#BFB5DF"
                    Height="560"
                    >
                  
                           
                            <GridView.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Margin="0,22,0,22" HorizontalAlignment="Center" FontSize="16" Text="Patient Documents" FontWeight="Light"/>
                                </DataTemplate>
                            </GridView.HeaderTemplate>
                       

                    <GridView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <!--<VariableSizedWrapGrid Orientation="Vertical" />-->
                            <StackPanel Orientation="Vertical" />
                        </ItemsPanelTemplate>
                    </GridView.ItemsPanel>

                    <!--<TextBlock  FontSize="20" Foreground="Gray"  Padding="30,0,0,0" Text="Documents"   />-->


                    <GridView.ItemTemplate>
